{
  "name": "Kolobok auth back",
  "description": "Backend for Kolobok authentication system",
  "repository": "https://github.com/Kolobok12309/My-auth_back",
  "success_url": "/api",
  "scripts": {
    "postdeploy": "yarn seed:run:prod"
  },
  "keywords": [
    "node",
    "auth",
    "nestjs"
  ],
  "addons": [
    "heroku-postgresql"
  ],
  "env": {
    "DB_SYNC": {
      "description": "Sync database scheme with application models",
      "required": false,
      "value": "false"
    },
    "JWT_SECRET": {
      "description": "User for database (DATABASE_URL have more priority)",
      "generator": "secret"
    },
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ]
}
